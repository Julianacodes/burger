<div class="jumbotron text-center bg-warning text-white">
  <h1 class="display-3" id="app-title">Burger! </h1>
  <img src="/img/burger2.jpg" />
</div>



<div class="row ml-5 mr-3">

  <div class="col-md-6">
    <h2>Eat more burgers!</h2>

    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block}}
    {{/unless}}
    {{/each}}


    {{!-- {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block}}
    {{/unless}}
    {{/each}} --}}

    

  </div>


  <div class=" col-md-6">
    <h2>Burgers Devoured!</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block}}
      {{/if}}
      {{/each}}
    </ul>


  </div>
</div>

<div class="row ml-5">
  <div class="col-md-5">

    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>


      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>